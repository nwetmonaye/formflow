{
    "name": "formflow-functions",
    "description": "Cloud Functions for Form Flow - Form submission, approval workflows, and notifications",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "18"
    },
    "main": "lib/index.js",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.21.2",
        "firebase-admin": "^11.11.1",
        "firebase-functions": "^4.9.0",
        "nodemailer": "^6.10.1",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^18.0.0",
        "@types/nodemailer": "^6.4.14",
        "@types/uuid": "^9.0.6",
        "typescript": "^5.0.0"
    },
    "private": true
}
